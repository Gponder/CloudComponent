<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ponder.cloudcomponent.dao.DepartmentMapper">
    <select id="list" resultType="com.ponder.cloudcomponent.model.po.Department">
        select * from departments
    </select>

    <resultMap id="detail" type="com.ponder.cloudcomponent.model.po.Department">
        <result column="dept_no" jdbcType="VARCHAR" property="deptNo"/>
        <result column="dept_name" jdbcType="VARCHAR" property="deptName"/>
        <collection property="deptEmployees" select="com.ponder.cloudcomponent.dao.DeptEmpMapper.departmentEmployee" column="{deptNo=dept_no}"/>
    </resultMap>

    <select id="detail" resultMap="detail">
        select * from departments where dept_no = #{deptNo}
    </select>
</mapper>