<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ponder.cloudcomponent.dao.DeptEmpMapper">

    <resultMap id="detail" type="com.ponder.cloudcomponent.model.po.DeptEmp">
        <result column="emp_no" jdbcType="INTEGER" property="empNo"/>
        <result column="dept_no" jdbcType="VARCHAR" property="deptNo"/>
        <result column="from_date" jdbcType="DATE" property="fromDate"/>
        <result column="to_date" jdbcType="DATE" property="toDate"/>
        <association property="employee" select="com.ponder.cloudcomponent.dao.EmployeeMapper.getByEmpNo" column="{empNo=emp_no}"/>
    </resultMap>

    <select id="departmentEmployee" resultMap="detail">
        select * from dept_emp where dept_no = #{deptNo}
    </select>

</mapper>